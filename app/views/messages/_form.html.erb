  <% if message.sent == false %>
   <%= form_for(current_user.messages.build(subject: message.subject, sender_id: current_user.id, recipient_id: message.sender_id), url: messages_path) do |f| %>

      <%= f.hidden_field :recipient_id %>
      <%= f.hidden_field :sender_id %>
      <%= f.hidden_field :subject %>

      <%= f.label :body %>
      <%= f.text_area :body, placeholder: "Compose reply", rows: 4 %>

      <%= f.submit "Send", class: "bbtn btn-primary" %>
      <% end %>
  <% end %>