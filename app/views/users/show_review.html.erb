<% provide(:title, @title) %>
<div class="row">

<aside class="span4">

<section>
<h1><%= @user.to_s %></h1>
<span><b>Reviews:</b> 
<%= @user.reviews.count %></span>
</section>

<section>
<%= render 'shared/stats' %>
<% if @users.any? %>
  <div class="user_avatars">
    <% @users.each do |user| %>
    <%= link_to user.to_s, user %>
    <% end %>
  </div>
<% end %>
</section>

</aside>

<div class="span8">
  <h3><%= @title %></h3>
  <% if @users.any? %>
    <ul class="users">
    <%= render @users %>
    </ul>
    <%= will_paginate %>
  <% end %>
</div>

</div>