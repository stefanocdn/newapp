<% provide(:title, @user.to_s) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= link_to image_tag(@user.avatar_url(:profile)), @user %>
        <%= @user.to_s %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
     <%= render 'review_form' if signed_in? %>
    </section>
  </aside>
  
  <div class="span8">
    <h3>Reviews Received (<%= @user.reverse_reviews.count %>)</h3>
    <% if @user.reverse_reviews.any? %>
    <ul class="reviews">
      <%= render partial: 'reviews/reverse_review', collection: @reverse_reviews %>
    </ul>
    <%= will_paginate @reverse_reviews %>
    <% end %>
    <hr>
    <h3>Reviews Made (<%= @user.reviews.count %>)</h3>
    <% if @user.reviews.any? %>
    <ul class="reviews">
      <%= render @reviews %>
    </ul>
    <%= will_paginate @reviews %>
    <% end %>
  </div>
</div>