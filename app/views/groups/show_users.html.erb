<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
  <section>
	<h1><%= @group.name %></h1>
	<span><%= link_to "group home page", @group %></span>
  </section>
  
  <section>
	<%= render 'stats' %>
	<% if @users.any? %>
	<div class="user_avatars">
	  <% @users.each do |user| %>
	    <%= link_to user.to_s, user %>
	  <% end %>
	</div>
	<% end %>
  </section>
  </aside>

  <div class="span8">
	<h3><%= @title %></h3>
	<% if @users.any? %>
	<ul class="users">
	<%= render partial: 'users/user', collection: @users %>
	</ul>
	<%= will_paginate @users %>
	<% end %>
  </div>
</div>